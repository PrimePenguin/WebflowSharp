<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyName>WebflowSharp</AssemblyName>
    <RootNamespace>WebflowSharp</RootNamespace>
    <Version>0.0.8</Version>
  </PropertyGroup>
  <PropertyGroup>
    <Description>WebflowSharp is a C# and .NET library that helps developers easily authenticate with and manage Webflow stores.</Description>
    <Authors>Ajay Kumar</Authors>
    <Copyright>Prime Penguin</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/PrimePenguin/WebflowSharp/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/PrimePenguin/WebflowSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PrimePenguin/WebflowSharp</RepositoryUrl>
    <PackageTags>Webflow,ecommerce</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIconUrl>https://raw.githubusercontent.com/PrimePenguin/WebflowSharp/master/PrimePenguin.png</PackageIconUrl>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Extensions\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Primitives" Version="3.1.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>
</Project>
